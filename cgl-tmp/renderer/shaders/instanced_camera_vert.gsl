#version 330 core

layout (location = 1) in vec3 vp;
layout (location = 2) in vec3 nm;
layout (location = 3) in vec2 tx;
layout (location = 4) in vec3 os;

uniform mat4 perspective;
uniform mat4 view;

out vec3 nm_out;
out vec2 tx_out;
out vec3 frag_pos;

void main(){
  nm_out = nm;
  tx_out = tx;

  vec4 vpn = vec4(vp, 1.0);
  vec4 osn = vec4(os, 0.0);

  frag_pos = vec3(vpn + osn);

  gl_Position = perspective * view * (vpn + osn);
}
